<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="errors-text">
        <% @post.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
        </div>
      </div>
      <div class="col-md-6 offset-md-3">
        <%= form_tag("/posts/#{@post.id}/update") do %>
          <textarea class="textlines" name="content"><%= @post.content %></textarea>
          <input class ="new-submit" type="submit" value="Post">
        <% end %>
      </div>
    </div>
  </div>
</body>
